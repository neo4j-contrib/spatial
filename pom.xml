        </repository>
        <repository>
            <id>java.net</id>
            <name>Java.net repo</name>
            <url>https://maven.java.net/service/local/repositories/releases/content/</url>
        </repository>
        <repository>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>opengeo</id>
